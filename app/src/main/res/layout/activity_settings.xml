<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8090A6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Settings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/cardview_dark_background"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:menu="@menu/action_bar_menu"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="48dp">

            <ImageView
                android:layout_width="196dp"
                android:layout_height="196dp"
                android:src="@drawable/doqu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/turkishflag"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="12dp"
                    android:clickable="true"
                    android:src="@drawable/turkishflag" />

                <ImageView
                    android:id="@+id/usflag"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="12dp"
                    android:clickable="true"
                    android:src="@drawable/usflag" />
            </LinearLayout>

            <Button
                android:id="@+id/deleteAllQuestionButton"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corners"
                android:paddingHorizontal="24dp"
                android:text="@string/delete_all_questions" />

            <Button
                android:id="@+id/deleteAccountButton"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_corners"
                android:paddingHorizontal="24dp"
                android:text="@string/delete_account" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>